{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=CleanArchitectureApiDb_Dev;Trusted_Connection=true;TrustServerCertificate=true;",
    "Redis": "localhost:6379",
    "HangfireConnection": "Server=localhost;Database=CleanArchitectureApiHangfire_Dev;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "JwtSettings": {
    "SecretKey": "DevelopmentSecretKeyThatIsAtLeast32CharactersLong!",
    "ExpiryMinutes": 120
  },
  "RateLimit": {
    "MaxRequests": 1000,
    "WindowMinutes": 1
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  }
}

